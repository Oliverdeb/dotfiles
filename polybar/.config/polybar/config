[module/date]
type = internal/date
date = %{T3}%%{F#99}%Y-%m-%d%%{F-}  %%{F#fff}%H:%M%%{F-}%%{T-}
date-alt = %{T3}%%{F#fff}%A, %d %B %Y  %%{F#fff}%H:%M%%{F#666}:%%{F#fba922}%S%%{F-}%%{T-}


